<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="SOMETIMES" />
      <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Hyperlink fx:id="link" text="%idi" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label text="%verzija" />
      <Label text="%repozitorij" GridPane.rowIndex="1" />
      <Label text="%oautoru" GridPane.rowIndex="2" />
      <Label text="1.0.0" GridPane.columnIndex="1" />
      <TextArea fx:id="oAutoru" editable="false" maxHeight="150.0" maxWidth="300.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <image>
            <Image url="@../img/imageAbout.png" />
         </image>
      </ImageView>
      <ButtonBar prefHeight="108.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
        <buttons>
          <Button fx:id="cancel" mnemonicParsing="false" onAction="#actionCancel" text="%cancel" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
